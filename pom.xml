<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.kaazing.gateway.core</groupId>
        <artifactId>com.kaazing.gateway.core.common</artifactId>
        <version>1.0.0.32</version>
    </parent>

    <groupId>com.kaazing.gateway.amqp</groupId>
    <artifactId>com.kaazing.gateway.amqp.client.java.doc</artifactId>
    <name>Kaazing WebSocket Gateway - AMQP Edition Java Client Doc</name>
    <version>3.3.1.13-SNAPSHOT</version>
    <packaging>jar</packaging>

    <scm>
        <connection>scm:svn:http://svn.kaazing.wan/amqp.client.java.doc/trunk</connection>
        <url>http://fisheye.kaazing.wan/browse/KaazingSVN/amqp.client.java.doc/trunk</url>
    </scm>

    <dependencies>
        <dependency>
            <groupId>com.kaazing.gateway.amqp</groupId>
            <artifactId>com.kaazing.gateway.amqp.client.java</artifactId>
            <classifier>sources</classifier>
            <type>jar</type>
            <version>[3.3.0.0,3.4.0.0)</version>
        </dependency>
        <dependency>
            <groupId>com.kaazing.gateway.core</groupId>
            <artifactId>com.kaazing.gateway.core.client.java</artifactId>
            <classifier>sources</classifier>
            <type>jar</type>
            <version>[3.3.0.0,3.4.0.0)</version>
        </dependency>
        <dependency>
            <groupId>com.kaazing.gateway.core</groupId>
            <artifactId>com.kaazing.gateway.core.client.java.internal</artifactId>
            <classifier>sources</classifier>
            <type>jar</type>
            <version>[3.3.0.0,3.4.0.0)</version>
        </dependency>
        <dependency>
            <groupId>com.kaazing.gateway.core</groupId>
            <artifactId>com.kaazing.gateway.core.client.java.kerberos</artifactId>
            <classifier>sources</classifier>
            <version>[3.3.0.0,3.4.0.0)</version>
            <type>jar</type>
        </dependency>
<!--
        <dependency>
            <groupId>com.kaazing.gateway.core</groupId>
            <artifactId>com.kaazing.gateway.core.client.java.compat</artifactId>
            <classifier>sources</classifier>
            <optional>true</optional>
            <version>[3.3.0.0,3.4.0.0)</version>
        </dependency>
-->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <type>jar</type>
            <optional>false</optional>
            <version>4.9</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jmock</groupId>
            <artifactId>jmock</artifactId>
            <type>jar</type>
            <optional>false</optional>
        </dependency>
        <dependency>
            <groupId>org.jmock</groupId>
            <artifactId>jmock-legacy</artifactId>
            <type>jar</type>
            <optional>false</optional>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-amqp</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeArtifactIds>
                                com.kaazing.gateway.amqp.client.java
                            </includeArtifactIds>
                            <includeClassifiers>sources</includeClassifiers>
                            <overWrite>false</overWrite>
                            <outputDirectory>target/generated-java</outputDirectory>
                            <excludes>
                                META-INF/**,
                                **/*.st
                            </excludes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-core</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeArtifactIds>
                                com.kaazing.gateway.core.client.java,
                                com.kaazing.gateway.core.client.java.internal,
                                com.kaazing.gateway.core.client.java.kerberos
                            </includeArtifactIds>
                            <includeClassifiers>sources</includeClassifiers>
                            <overWrite>false</overWrite>
                            <outputDirectory>target/generated-java</outputDirectory>
                            <excludes>
                                META-INF/**,
                                com/kaazing/gateway/client/html5/ByteSocket*,
                                com/kaazing/gateway/client/html5/Base64Util*,
                                com/kaazing/gateway/client/html5/W*,
                                com/kaazing/gateway/client/html5/E*,
                                com/kaazing/gateway/client/html5/util/**,
                                com/kaazing/gateway/client/security/kerberos/kerberos5/**,
                            </excludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.8.1</version>
                <executions>
                    <execution>
                        <!-- The id "attach-javadocs" is critical. Otherwise, these settings are not applied at release:perform. -->
                        <id>attach-javadocs</id>
                        <phase>package</phase>
                        <goals>
                            <goal>javadoc</goal>
                        </goals>
                        <configuration>
                            <attach>true</attach>
                            <sourcepath>target/generated-java</sourcepath>
                            <excludePackageNames>
                                com.kaazing.gateway.bridge:com.kaazing.net.auth.kerberos.kerberos5:com.kaazing.gateway.client.transport:*.impl.*
                            </excludePackageNames>
                            <overview>${basedir}/src/main/javadoc/overview.html</overview>
                            <windowtitle>Kaazing Gateway AMQP Java Client Documentation</windowtitle>
                            <doctitle>"All Classes - API Documentation"</doctitle>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
               <groupId>org.codehaus.mojo</groupId>
               <artifactId>cobertura-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.9</version>
                <configuration>
                    <forkMode>always</forkMode>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
